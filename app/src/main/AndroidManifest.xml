<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsquare.task">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".di.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSquareTask">
        <activity
            android:name="com.appsquare.task.ui.activity.home.HomeActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true"
            android:configChanges="orientation|navigation|smallestScreenSize|screenSize|screenLayout"
            android:theme="@style/Theme.AppSquareTask.NoActionBar" />
        <activity
            android:name="com.appsquare.task.ui.activity.login.LoginActivity"
            android:configChanges="orientation|navigation|smallestScreenSize|screenSize|screenLayout"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>